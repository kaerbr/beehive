{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "kaerbr"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "kubernetes/apps/**/!(kustomization).yaml"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/(?:^|/)gotk-components\\.ya?ml$/",
      "kubernetes/infrastructure/crd/**/helm.yaml"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["^README\\.md$"],
      "matchStrings": [
        "img\\.shields\\.io\\/badge\\/(?<depName>.+?)-v?(?<currentValue>\\d[^-\\?]+)-"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["Talos"],
      "packageName": "siderolabs/talos"
    },
    {
      "matchDepNames": ["Kubernetes"],
      "packageName": "kubernetes/kubernetes"
    },
    {
      "matchDepNames": ["Flux"],
      "packageName": "fluxcd/flux2"
    }
  ]
}
